@model OrderElement

<h2>Создание заказа на товар</h2>
<form asp-action="create">
    <div>
        <p>
            <label asp-for="OrderId"></label> <br />
            <select asp-for="OrderId" asp-items="@ViewBag.Orders"></select> <br />
        </p>
        <p>
            <label asp-for="ItemId"></label> <br />
            <select asp-for="ItemId" asp-items="@ViewBag.Items"></select> <br />
        </p>
        <p>
            <label asp-for="ItemsCount"></label> <br />
            <input type="number" asp-for="ItemsCount" value="0"/>
            <span asp-validation-for="ItemsCount" /> <br />
        </p>
        <p>
            <label asp-for="ItemPrice"></label> <br />
            <input type="number" asp-for="ItemPrice" value="0"/>
            <span asp-validation-for="ItemPrice" /> <br />
        </p>
        <p>
            <input type="submit" value="Создать" />
        </p>
    </div>
</form>
