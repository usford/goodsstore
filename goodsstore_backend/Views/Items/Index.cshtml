@model IEnumerable<goodsstore_backend.Models.Item>

<h2>Список товаров</h2>
<p><a asp-action="create">Добавить товар</a></p>
<table>
    <tr>
        <th>Название</th>
        <th>Код</th>
        <th>Цена шт.</th>
        <th>Категория</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td>@item.Price</td>
            <td>@item.Category</td>
            <td>
                <a asp-action="edit" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-action="delete" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="удалить">
                </form>
            </td>
        </tr>
    }
</table>