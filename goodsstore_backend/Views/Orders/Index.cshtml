@model IEnumerable<Order>

<h2>Список заказов</h2>
<p><a asp-action="create">Добавить заказ</a></p>
<table>
    <tr>
        <th>
            <a asp-action="index" asp-route-sortOrder="@ViewBag.CustomerNameSort">
                Имя заказчика
            </a>
        </th>
        <th>
            <a asp-action="index" asp-route-sortOrder="@ViewBag.CustomerCodeSort">
                Код заказчика
            </a>
        </th>
        <th>
            <a asp-action="index" asp-route-sortOrder="@ViewBag.OrderDateSort">
                Дата создания заказа
            </a>
        </th>
        <th>
            <a asp-action="index" asp-route-sortOrder="@ViewBag.ShipmentDateSort">
                Дата доставки
            </a>
        </th>
        <th>
            <a asp-action="index" asp-route-sortOrder="@ViewBag.OrderNumberSort">
                Номер заказа
            </a>
        </th>
        <th>
            <a asp-action="index" asp-route-sortOrder="@ViewBag.StatusSort">
                Состояние заказа
            </a>
        </th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Customer.Name</td>
            <td>@order.Customer.Code</td>
            <td>@order.OrderDate</td>
            @if (order.ShipmentDate == null)
            {
                <td>Неизвестно</td>
            }else
            {
                 <td>@order.ShipmentDate</td>
            }
            <td>@order.OrderNumber</td>
            <td>@order.Status</td>
            <td>
                <a asp-action="edit" asp-route-id="@order.Id">Изменить</a>
            </td>
            <td>
                <form asp-action="delete" method="post" asp-route-id="@order.Id">
                    <input type="submit" value="удалить">
                </form>
            </td>
        </tr>
    }
</table>